<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Blog Home</h1>
        <div class="row">
            <% posts.forEach(post => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/posts/<%= post._id %>"><%= post.title %></a></h5>
                            <p class="card-text">
                                <%= (post.content ? post.content.substring(0, 100) : '') %>...
                            </p>
                            <a href="/posts/<%= post._id %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="d-flex justify-content-center">
            <a href="/compose" class="btn btn-primary mb-3">Compose</a>
        </div>
    </div>
</body>
</html>
